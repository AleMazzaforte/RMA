<%- include('partials/head.ejs') %>

<title>Login</title>
</head>
<body>
    <button id="btn-invitado" class="buttonEnviar">Invitado</button>
    <button id="btn-socio" class="buttonEnviar">Socio</button>

    <!-- Formulario para Invitado -->
    <div id="form-invitado" style="display: none;">
        <form action="/login" method="post">
            <label for="usuario"><h2>Usuario</h2>
                <input type="text" name="usuario" value="Alejandro">
            </label>
            <label for="password"><h2>Contraseña:</h2>
                <input type="password" name="password" value="pipochipolati">
            </label>
            <input type="submit" value="Ingresar">
        </form>

        <% if (typeof mensaje !== 'undefined') { %>
            <p style="color:red;"><%= mensaje %></p>
        <% } %>
    </div>

    <!-- Formulario para Socio -->
    <div id="form-socio" style="display: none;">
        <form action="/validarProveedor" method="post">
            <label for="emailProveedor"><h2>Mail</h2>
                <input type="email" name="emailProveedor">
            </label>
            <label for="password"><h2>Contraseña:</h2>
                <input type="password" name="password">
            </label>
            <input type="submit" value="Ingresar">
        </form>
    </div>
    <!--script src="../../controladores/usuarios.js"></script-->
    <script src="/js/login.js"></script>
</body>
</html>
